<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fr_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/bt_fragment0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/bt_fragment0_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/astatic"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bt_fragment1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/bt_fragment1_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/quality"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bt_fragment2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/bt_fragment2_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/warning"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bt_fragment3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/bt_fragment3_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/qrcode"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>